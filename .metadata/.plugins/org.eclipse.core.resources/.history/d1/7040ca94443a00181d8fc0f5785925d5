package net.imwork.lhqing.qmall.cart.controller;

import java.util.ArrayList;
import java.util.List;

import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.apache.commons.lang3.StringUtils;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;



import net.imwork.lhqing.qmall.common.utils.CookieUtils;
import net.imwork.lhqing.qmall.common.utils.JsonUtils;
import net.imwork.lhqing.qmall.pojo.Item;

/**
 * 购物车处理
 * 
 * @author lhq_i
 *
 */
@Controller
public class CartController {
	
	@Value("${COOKIES_KEY}")
	private String COOKIES_KEY;

	@RequestMapping("/cart/add/{itemId}.html")
	public String addCart(@PathVariable long itemId, @RequestParam(defaultValue = "1") int num,
			HttpServletRequest request, HttpServletResponse response) {
		List<Item> itemList = this.getItemListByCookie(request);
		
		boolean itemIsExist = false;
		for (Item item : itemList) {
			if(item.getId() == itemId){
				item.setNum(item.getNum()+1);
				break;
			}
		}
		
		return null;	
	}

	private List<Item> getItemListByCookie(HttpServletRequest request) {
		String itemListPojo = CookieUtils.getCookieValue(request, COOKIES_KEY, true);
		if(StringUtils.isBlank(itemListPojo)){
			return new ArrayList<>();
		}
		List<Item> itemList = JsonUtils.jsonToList(itemListPojo, Item.class);
		return itemList;
	}
}
